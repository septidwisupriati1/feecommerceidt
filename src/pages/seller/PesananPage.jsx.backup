                <div className="relative flex-1">
                  <MagnifyingGlassIcon className="absolute left-3 top-1/2 transform -translate-y-1/2 h-5 w-5 text-gray-400" />
                  <Input
                    type="text"
                    placeholder="Cari pesanan, pelanggan, atau produk..."
                    value={searchQuery}
                    onChange={(e) => setSearchQuery(e.target.value)}
                    onKeyPress={(e) => e.key === 'Enter' && handleSearch()}
                    className="pl-10"
                  />
                </div>
                <Button
                  onClick={handleSearch}
                  className="bg-blue-600 hover:bg-blue-700"
                  size="sm"
                >
                  <MagnifyingGlassIcon className="h-4 w-4" />
                </Button>
                <Button
                  onClick={fetchOrders}
                  variant="outline"
                  size="sm"
                  title="Refresh data"
                >
                  <ArrowPathIcon className="h-4 w-4" />
                </Button>
              </div>

              {/* Status Filter */}
              <div className="flex gap-2 flex-wrap">
                <Button
                  onClick={() => setFilterStatus('all')}
                  variant={filterStatus === 'all' ? 'default' : 'outline'}
                  className={filterStatus === 'all' ? 'bg-blue-600 hover:bg-blue-700' : ''}
                  size="sm"
                >
                  Semua
                </Button>
                <Button
                  onClick={() => setFilterStatus('pending')}
                  variant={filterStatus === 'pending' ? 'default' : 'outline'}
                  className={filterStatus === 'pending' ? 'bg-yellow-600 hover:bg-yellow-700' : ''}
                  size="sm"
                >
                  Menunggu
                </Button>
                <Button
                  onClick={() => setFilterStatus('paid')}
                  variant={filterStatus === 'paid' ? 'default' : 'outline'}
                  className={filterStatus === 'paid' ? 'bg-blue-500 hover:bg-blue-600' : ''}
                  size="sm"
                >
                  Dibayar
                </Button>
                <Button
                  onClick={() => setFilterStatus('processing')}
                  variant={filterStatus === 'processing' ? 'default' : 'outline'}
                  className={filterStatus === 'processing' ? 'bg-blue-600 hover:bg-blue-700' : ''}
                  size="sm"
                >
                  Diproses
                </Button>
                <Button
                  onClick={() => setFilterStatus('shipped')}
                  variant={filterStatus === 'shipped' ? 'default' : 'outline'}
                  className={filterStatus === 'shipped' ? 'bg-purple-600 hover:bg-purple-700' : ''}
                  size="sm"
                >
                  Dikirim
                </Button>
                <Button
                  onClick={() => setFilterStatus('completed')}
                  variant={filterStatus === 'completed' ? 'default' : 'outline'}
                  className={filterStatus === 'completed' ? 'bg-green-600 hover:bg-green-700' : ''}
                  size="sm"
                >
                  Selesai
                </Button>
              </div>
            </div>
          </CardContent>
        </Card>

        {/* Orders List */}
        <div className="space-y-4">
          {loading ? (
            <Card className="shadow-lg">
              <CardContent className="p-12 text-center">
                <ArrowPathIcon className="h-12 w-12 mx-auto mb-4 text-blue-500 animate-spin" />
                <p className="text-lg font-semibold text-gray-700">Memuat data pesanan...</p>
              </CardContent>
            </Card>
          ) : error ? (
            <Card className="shadow-lg">
              <CardContent className="p-12 text-center">
                <ExclamationTriangleIcon className="h-16 w-16 mx-auto mb-4 text-red-500" />
                <p className="text-lg font-semibold text-red-600 mb-2">Gagal memuat data</p>
                <p className="text-sm text-gray-600 mb-4">{error}</p>
                <Button onClick={fetchOrders} className="bg-blue-600 hover:bg-blue-700">
                  <ArrowPathIcon className="h-4 w-4 mr-2" />
                  Coba Lagi
                </Button>
              </CardContent>
            </Card>
          ) : filteredOrders.length === 0 ? (
            <Card className="shadow-lg">
              <CardContent className="p-12 text-center">
                <div className="text-gray-400">
                  <ExclamationTriangleIcon className="h-16 w-16 mx-auto mb-4" />
                  <p className="text-lg font-semibold mb-2">Tidak ada pesanan</p>
                  <p className="text-sm">Belum ada pesanan masuk atau tidak ditemukan</p>
                </div>
              </CardContent>
            </Card>
          ) : (
            filteredOrders.map((order) => {
              const statusInfo = getStatusBadge(order.status);
              const paymentInfo = getPaymentStatusBadge(order.paymentStatus);
              const StatusIcon = statusInfo.icon;
              
              return (
                <Card key={order.orderId} className="shadow-lg hover:shadow-xl transition-shadow">
                  <CardContent className="p-6">
                    {/* Order Header */}
                    <div className="flex flex-col md:flex-row md:items-center justify-between mb-4 pb-4 border-b">
                      <div>
                        <div className="flex items-center gap-3 mb-2">
                          <h3 className="text-xl font-bold text-blue-600">{order.id}</h3>
                          <span className={`inline-flex items-center gap-1 px-3 py-1 rounded-full text-xs font-semibold ${statusInfo.class}`}>
                            <StatusIcon className="h-4 w-4" />
                            {statusInfo.label}
                          </span>
                          <span className={`inline-flex items-center gap-1 px-3 py-1 rounded-full text-xs font-semibold ${paymentInfo.class}`}>
                            {paymentInfo.label}
                          </span>
                        </div>
                        <p className="text-sm text-gray-600">{order.orderDate}</p>
                      </div>
                      <div className="mt-3 md:mt-0 text-right">
                        <p className="text-sm text-gray-600 mb-1">Total Pesanan</p>
                        <p className="text-2xl font-bold text-green-600">{formatCurrency(order.total)}</p>
                      </div>
                    </div>

                    <div className="grid md:grid-cols-2 gap-6">
                      {/* Customer Info */}
                      <div>
                        <h4 className="font-semibold text-gray-900 mb-3">Informasi Pelanggan</h4>
                        <div className="space-y-2">
                          <div className="flex items-start gap-2">
                            <span className="text-2xl">üë§</span>
                            <div>
                              <p className="font-semibold text-gray-900">{order.customer.name}</p>
                              <p className="text-sm text-gray-600 flex items-center gap-1">
                                <PhoneIcon className="h-4 w-4" />
                                {order.customer.phone}
                              </p>
                            </div>
                          </div>
                          <div className="flex items-start gap-2">
                            <MapPinIcon className="h-5 w-5 text-gray-600 flex-shrink-0 mt-0.5" />
                            <p className="text-sm text-gray-600">{order.customer.address}</p>
                          </div>
                        </div>
                      </div>

                      {/* Order Items */}
                      <div>
                        <h4 className="font-semibold text-gray-900 mb-3">Produk Dipesan</h4>
                        <div className="space-y-3">
                          {order.items.map((item) => (
                            <div key={item.id} className="flex items-start gap-3 bg-gray-50 p-3 rounded-lg">
                              <div className="text-3xl">
                                {item.image && item.image.startsWith('http') ? (
                                  <img src={item.image} alt={item.name} className="w-12 h-12 object-cover rounded" />
                                ) : (
                                  <span>üì¶</span>
                                )}
                              </div>
                              <div className="flex-1">
                                <p className="font-semibold text-gray-900">{item.name}</p>
                                <p className="text-xs text-gray-600">{item.variant}</p>
                                <p className="text-sm text-gray-600 mt-1">
                                  {formatCurrency(item.price)} x {item.qty} = <span className="font-semibold text-green-600">{formatCurrency(item.price * item.qty)}</span>
                                </p>
                              </div>
                            </div>
                          ))}
                        </div>

                        {/* Payment & Shipping Info */}
                        <div className="mt-4 space-y-2 bg-blue-50 p-3 rounded-lg">
                          <div className="flex items-center justify-between text-sm">
                            <span className="text-gray-600">Subtotal:</span>
                            <span className="font-semibold">{formatCurrency(order.subtotal)}</span>
                          </div>
                          <div className="flex items-center justify-between text-sm">
                            <span className="text-gray-600">Ongkir:</span>
                            <div className="flex items-center gap-2">
                              {getCourierFromOrder(order) && (
                                <img
                                  src={getCourierFromOrder(order).logo}
                                  alt={getCourierFromOrder(order).name}
                                  className="h-4 w-auto object-contain"
                                  onError={(e) => e.target.style.display = 'none'}
                                />
                              )}
                              <span className="font-semibold">{formatCurrency(order.shipping)}</span>
                            </div>
                          </div>
                          <div className="flex items-center justify-between text-sm pt-2 border-t border-blue-200">
                            <span className="text-gray-600">Pembayaran:</span>
                            <span className="font-semibold">{order.paymentMethod}</span>
                          </div>
                          {order.resi && (
                            <div className="mt-2 p-2 bg-purple-50 rounded-lg border border-purple-200">
                              <div className="flex items-center gap-2 mb-1">
                                {getCourierFromOrder(order) && (
                                  <img
                                    src={getCourierFromOrder(order).logo}
                                    alt={getCourierFromOrder(order).name}
                                    className="h-6 w-auto object-contain"
                                    onError={(e) => e.target.style.display = 'none'}
                                  />
                                )}
                                <span className="text-xs font-semibold text-purple-700">
                                  {order.shippingService}
                                </span>
                              </div>
                              <div className="flex items-center justify-between">
                                <span className="text-xs text-gray-600">No. Resi:</span>
                                <span className="font-mono font-semibold text-purple-600 text-sm">{order.resi}</span>
                              </div>
                            </div>
                          )}
                        </div>

                        {order.notes && (
                          <div className="mt-3 bg-yellow-50 p-3 rounded-lg">
                            <p className="text-sm text-gray-600">
                              <span className="font-semibold">Catatan:</span> {order.notes}
                            </p>
                          </div>
                        )}
                      </div>
                    </div>

                    {/* Action Buttons */}
                    <div className="flex gap-2 mt-6 pt-4 border-t">
                      <Button
                        variant="outline"
                        size="sm"
                        className="hover:bg-blue-50"
                      >
                        <EyeIcon className="h-4 w-4 mr-1" />
                        Detail
                      </Button>

                      {order.status === 'pending' && (
                        <>
                          <Button
                            onClick={() => handleProcessOrder(order.id)}
                            size="sm"
                            className="bg-blue-600 hover:bg-blue-700"
                          >
                            <CheckIcon className="h-4 w-4 mr-1" />
                            Proses Pesanan
                          </Button>
                          <Button
                            onClick={() => handleCancelOrder(order.id)}
                            variant="outline"
                            size="sm"
                            className="text-red-600 hover:bg-red-50"
                          >
                            <XMarkIcon className="h-4 w-4 mr-1" />
                            Batalkan
                          </Button>
                        </>
                      )}

                      {order.status === 'processing' && (
                        <Button
                          onClick={() => handleShipOrder(order)}
                          size="sm"
                          className="bg-purple-600 hover:bg-purple-700"
                        >
                          <TruckIcon className="h-4 w-4 mr-1" />
                          Kirim Pesanan
                        </Button>
                      )}

                      {order.status === 'shipped' && (
                        <Button
                          variant="outline"
                          size="sm"
                          className="text-green-600 hover:bg-green-50"
                        >
                          <TruckIcon className="h-4 w-4 mr-1" />
                          Lacak Pengiriman
                        </Button>
                      )}
                    </div>
                  </CardContent>
                </Card>
              );
            })
          )}
        </div>

        {/* Pagination */}
        {!loading && !error && pagination.total_pages > 1 && (
          <Card className="mt-6 shadow-lg">
            <CardContent className="p-4">
              <div className="flex items-center justify-between">
                <div className="text-sm text-gray-600">
                  Halaman {pagination.current_page} dari {pagination.total_pages} 
                  <span className="ml-2">({pagination.total_items} pesanan)</span>
                </div>
                <div className="flex gap-2">
                  <Button
                    onClick={() => handlePageChange(pagination.current_page - 1)}
                    disabled={!pagination.has_prev_page}
                    variant="outline"
                    size="sm"
                  >
                    ‚Üê Sebelumnya
                  </Button>
                  <Button
                    onClick={() => handlePageChange(pagination.current_page + 1)}
                    disabled={!pagination.has_next_page}
                    variant="outline"
                    size="sm"
                  >
                    Selanjutnya ‚Üí
                  </Button>
                </div>
              </div>
            </CardContent>
          </Card>
        )}
      </div>

      {/* Shipping Modal */}
      {showShippingModal && (
        <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
          <Card className="w-full max-w-md shadow-2xl">
            <CardContent className="p-6">
              <div className="flex items-center justify-between mb-6">
                <h3 className="text-xl font-bold text-gray-900">Input Informasi Pengiriman</h3>
                <button
                  onClick={() => setShowShippingModal(false)}
                  className="text-gray-400 hover:text-gray-600"
                >
                  <XMarkIcon className="h-6 w-6" />
                </button>
              </div>

              <div className="mb-4 p-3 bg-blue-50 rounded-lg">
                <p className="text-sm text-gray-700">
                  <span className="font-semibold">Pesanan:</span> {selectedOrder?.id}
                </p>
                <p className="text-sm text-gray-700">
                  <span className="font-semibold">Pelanggan:</span> {selectedOrder?.customer?.name}
                </p>
              </div>

              <div className="space-y-4">
                <div>
                  <label className="block text-sm font-medium text-gray-700 mb-2">
                    Pilih Kurir <span className="text-red-500">*</span>
                  </label>
                  
                  {/* Selected Courier Preview */}
                  {shippingForm.courier && (
                    <div className="mb-3 p-3 bg-gray-50 rounded-lg border border-gray-200">
                      <div className="flex items-center gap-3">
                        <img
                          src={COURIERS.find(c => c.code === shippingForm.courier)?.logo}
                          alt={COURIERS.find(c => c.code === shippingForm.courier)?.name}
                          className="h-8 w-auto object-contain"
                          onError={(e) => e.target.style.display = 'none'}
                        />
                        <div>
                          <p className="font-semibold text-gray-900">
                            {COURIERS.find(c => c.code === shippingForm.courier)?.name}
                          </p>
                          <p className="text-xs text-gray-500">
                            {COURIERS.find(c => c.code === shippingForm.courier)?.fullName}
                          </p>
                        </div>
                      </div>
                    </div>
                  )}

                  {/* Courier Grid Selection */}
                  <div className="grid grid-cols-3 gap-2 mb-2">
                    {COURIERS.map((courier) => (
                      <button
                        key={courier.code}
                        type="button"
                        onClick={() => setShippingForm({ ...shippingForm, courier: courier.code })}
                        className={`p-3 border-2 rounded-lg transition-all hover:shadow-md ${
                          shippingForm.courier === courier.code
                            ? 'border-blue-500 bg-blue-50 shadow-md'
                            : 'border-gray-200 hover:border-gray-300'
                        }`}
                      >
                        <div className="flex flex-col items-center gap-2">
                          <img
                            src={courier.logo}
                            alt={courier.name}
                            className="h-8 w-auto object-contain"
                            onError={(e) => e.target.style.display = 'none'}
                          />
                          <span className="text-xs font-medium text-gray-700 text-center">
                            {courier.name}
                          </span>
                        </div>
                      </button>
                    ))}
                  </div>
                  
                  <p className="text-xs text-gray-500 mt-1">
                    Klik logo kurir untuk memilih jasa pengiriman
                  </p>
                </div>

                <div>
                  <label className="block text-sm font-medium text-gray-700 mb-2">
                    Nomor Resi <span className="text-red-500">*</span>
                  </label>
                  <Input
                    type="text"
                    value={shippingForm.trackingNumber}
                    onChange={(e) => setShippingForm({ ...shippingForm, trackingNumber: e.target.value })}
                    placeholder="Contoh: JNE123456789"
                    required
                    minLength={5}
                    maxLength={50}
                  />
                  <p className="text-xs text-gray-500 mt-1">
                    Minimal 5 karakter, maksimal 50 karakter
                  </p>
                </div>

                <div className="p-3 bg-yellow-50 rounded-lg border border-yellow-200">
                  <p className="text-sm text-yellow-800">
                    <span className="font-semibold">‚ÑπÔ∏è Informasi:</span> Nomor resi akan divalidasi otomatis dalam 3 jam setelah input.
                  </p>
                </div>
              </div>

              <div className="flex gap-3 mt-6">
                <Button
                  onClick={handleSubmitShipping}
                  disabled={loading || !shippingForm.courier || !shippingForm.trackingNumber}
                  className="flex-1 bg-blue-600 hover:bg-blue-700"
                >
                  <TruckIcon className="h-5 w-5 mr-2" />
                  {loading ? 'Menyimpan...' : 'Kirim Pesanan'}
                </Button>
                <Button
                  onClick={() => setShowShippingModal(false)}
                  disabled={loading}
                  variant="outline"
                  className="flex-1"
                >
                  Batal
                </Button>
              </div>
            </CardContent>
          </Card>
        </div>
      )}
    </SellerSidebar>
  );
}
